import java.util.*;

public class Main{
    public static void main(String[] args){
        Scanner s = new Scanner(System.in);
        int n = s.nextInt();
        int cut = s.nextInt();
        
        int[] score = new int[n];
        
        for (int i=0; i<n; i++){
            score[i] = s.nextInt();
        }
        Arrays.sort(score);
		
		System.out.println(score[n-cut]);
    }
}
